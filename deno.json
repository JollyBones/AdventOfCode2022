{
	"compilerOptions": {
		"allowJs": false,
		"lib": [
			"deno.window"
		],
		"strict": true
	},
	"lint": {
		"files": {
		  "include": ["solutions/"],
		  "exclude": ["inputs/"]
		},
		"rules": {
		  "tags": ["recommended"]
		}
	},
	"fmt": {
		"files": {
			"include": ["solutions/"],
			"exclude": ["inputs/"]
		},
		"options": {
		  "useTabs": true,
		  "lineWidth": 80,
		  "indentWidth": 4,
		  "singleQuote": true,
		  "proseWrap": "preserve"
		}
	}
}